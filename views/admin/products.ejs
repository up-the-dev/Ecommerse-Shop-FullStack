<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
    <%- include('../includes/flash-msg.ejs') %>

            <main>
                <% if (prods.length> 0) { %>
                    <div class="grid">
                        <% for (let product of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= product.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img width="318px" height="212px" src="<%= product.imageUrl %>"
                                        alt="<%= product.title %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">â‚¹ 
                                        <%= product.price %>
                                    </h2>
                                    <p class="product__description">
                                        <%= product.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <form action="/admin/edit-product/<%= product._id%>" method="get">
                                        <button id="btn" type="submit">Edit</button>
                                    </form>
                                    <form action="/admin/delete-product/<%= product._id%>" method="POST">
                                        <button id="btn" type="submit">Delete</button>
                                    </form>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>